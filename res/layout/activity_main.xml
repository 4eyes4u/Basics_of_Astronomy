<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ss_pozadina"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trn.basicsofastronomy.MainActivity" >

    <ImageButton
        android:id="@+id/imgUran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSaturn"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/imgZemlja"
        android:background="@null"
        android:src="@drawable/uran" />

    <ImageButton
        android:id="@+id/imgSaturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imgJupiter"
        android:layout_marginTop="53dp"
        android:background="@null"
        android:src="@drawable/saturn" />

    <ImageButton
        android:id="@+id/imgZemlja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgMerkur"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/imgSaturn"
        android:background="@null"
        android:src="@drawable/zemlja" />

    <ImageButton
        android:id="@+id/imgNeptun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgUran"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/imgVenera"
        android:background="@null"
        android:src="@drawable/neptun" />

    <ImageButton
        android:id="@+id/imgJupiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgZemlja"
        android:background="@null"
        android:src="@drawable/jupiter" />

    <ImageButton
        android:id="@+id/imgVenera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgSaturn"
        android:layout_below="@+id/imgZemlja"
        android:layout_marginLeft="18dp"
        android:background="@null"
        android:src="@drawable/venera" />

    <ImageButton
        android:id="@+id/imgMars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgSaturn"
        android:layout_below="@+id/imgVenera"
        android:background="@null"
        android:src="@drawable/mars" />

    <ImageButton
        android:id="@+id/imgMerkur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgNeptun"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:src="@drawable/merkur" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgMerkur"
        android:layout_alignRight="@+id/imgMerkur"
        android:layout_below="@+id/imgMerkur"
        android:gravity="center"
        android:text="Merkur"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgZemlja"
        android:layout_below="@+id/imgZemlja"
        android:layout_toRightOf="@+id/imgMars"
        android:gravity="center"
        android:text="Zemlja"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgVenera"
        android:layout_alignTop="@+id/imgMars"
        android:layout_toLeftOf="@+id/imgNeptun"
        android:gravity="center"
        android:text="Venera"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgMars"
        android:layout_alignRight="@+id/imgMars"
        android:layout_below="@+id/imgMars"
        android:gravity="center"
        android:text="Mars"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgJupiter"
        android:layout_alignRight="@+id/imgJupiter"
        android:layout_below="@+id/imgJupiter"
        android:gravity="center"
        android:text="Jupiter"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgNeptun"
        android:layout_alignLeft="@+id/imgSaturn"
        android:layout_alignRight="@+id/imgSaturn"
        android:gravity="center"
        android:text="Saturn"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgUran"
        android:layout_alignRight="@+id/imgUran"
        android:layout_below="@+id/imgUran"
        android:gravity="center"
        android:text="Uran"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/rgp8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgNeptun"
        android:layout_alignRight="@+id/imgNeptun"
        android:layout_below="@+id/imgNeptun"
        android:gravity="center"
        android:text="Neptun"
        android:textColor="#ffffff"
        android:textSize="8sp" />

</RelativeLayout>