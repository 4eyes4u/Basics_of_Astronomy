<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trn.basicsofastronomy.Puzzle"
    android:background="#000000" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp" >

   
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_01" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_02" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_03" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_04" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_05" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignTop="@+id/imageView5"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_06" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_toLeftOf="@+id/imageView5"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_07" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_below="@+id/imageView5"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_08" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignTop="@+id/imageView8"
            android:onClick="tap"
            android:soundEffectsEnabled="true"
            android:src="@drawable/slika1_09" />
    </RelativeLayout>

</RelativeLayout>